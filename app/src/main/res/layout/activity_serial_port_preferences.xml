<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".serial.SerialPortPreferences">

    <EditText
        android:id="@+id/deviceNameText"
        android:layout_width="261dp"
        android:layout_height="94dp"
        android:layout_marginStart="539dp"
        android:layout_marginTop="103dp"
        android:ems="10"
        android:hint="ttyS1"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/baudrateText"
        android:layout_width="260dp"
        android:layout_height="87dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="9600"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/deviceNameText"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameText" />

    <Button
        android:id="@+id/preferencesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="608dp"
        android:layout_marginTop="392dp"
        android:text="OK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>